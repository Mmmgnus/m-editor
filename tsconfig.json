{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@app/*": ["src/app/*"],
			"@modules/*": ["src/modules/*"],
			"@shared/*": ["src/shared/*"]
		}
	},
	"include": ["src", "vite.config.ts"]
}
